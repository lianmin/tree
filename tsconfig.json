{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "lib": ["ESNext", "es6"],
    "allowJs": true,
    "types": [],
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "es/"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib", "coverage"]
}
